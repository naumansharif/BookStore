@{
    ViewBag.Title = "add";
}



    <div id="onlineBookStore_container">
        <div id="onlineBookStore_menu">
            <ul>
                <li><a href="~/Home/home">Home</a></li>
                <li><a href="~/Home/index3">About us</a></li>
                <li><a href="~/Client/books">Books</a></li>
                <li><a href="~/Admin/login">Login</a></li>
                <li><a href="~/Admin/Menu">Menu</a></li>
                <li><a href="~/Admin/signout">Sign out</a></li>
                <li><a href="~/Admin/advance">Advanced Search </a></li>

            </ul>
            <form class="navbar-form" method="post" action="/Client/search">
                <select name="type" size="1">

                    <option value="Publisher">Publisher</option>

                    <option value="Name" selected>Title /Book Name</option>

                    <option value="Author">Author /Writer</option>

                    <option value="Price">Price</option>

                    <option value="Catagory">Catagory</option>

                </select>
                <input type="search" value="" name="search" />
                <input type="submit" value="search" />
            </form>
        </div> <!-- end of menu -->

       @Html.Partial("/Views/Shared/_title.cshtml")


        <div id="onlineBookStore_content">

            @Html.Partial("/Views/Shared/_centerLayout.cshtml")




            <div id="onlineBookStore_content_right">

                <div class="onlineBookStore_add_book">
                            <h1>Add a Book </h1>
                    <form method="post" action="/Admin/add_b" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <label style="align-items:center">Name</label>
                            <p><input type="text" name="Name" value="" placeholder="Name of Book" /></p><br />
                            <label>Price</label>
                            <p><input type="text" name="Price" value="" placeholder="Price of Book" /></p><br />
                            <label>Quantity</label>
                            <p><input type="text" name="Quantity" value="" placeholder="Quantity of Book" /></p><br />
                            @*<label>Author</label>
                            <p><input type="text" name="Author" value="" placeholder="Author of Book" /></p><br />*@
                            @*<p><input type="" name="Catagory" value="" placeholder="Price of Book" /></p>*@
                            <label>Catagory</label>
                            
                            <select name="Catagory">
                                @*<option value="">-Select-</option>*@
                                @foreach (var row in ViewBag.Catagory)
                                {
                                    <option value="@row.Name">@row.Name</option>
                                }
                            </select><br /><br />
                            <label>Author</label>

                            <select name="Author">
                                @foreach (var row in ViewBag.Authors)
                                {
                                    <option value="@row.Name">@row.Name</option>
                                }
                            </select><br /><br />
                            <label>Publisher</label>

                            <select name="Publisher">
                                @foreach (var row in ViewBag.Publisher)
                                {
                                    <option value="@row.Name">@row.Name</option>
                                }
                            </select><br />
                            <br />

                            Upload Image: <input type="file" name="image" />

                            <br /> <br /> <br />
                            <p class="submit"><input type="submit" name="commit" value="Add Book" /></p>
                            </fieldset>
</form>
                 

                    </div>
            </div> <!-- end of content right -->

            <div class="cleaner_with_height">&nbsp;</div>
        </div> <!-- end of content -->

        @Html.Partial("/Views/Shared/_footer.cshtml")




    </div> <!-- end of container -->




